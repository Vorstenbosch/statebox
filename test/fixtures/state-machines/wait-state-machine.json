{
  "Comment": "A simple state machine to loop using the wait state",
  "StartAt": "Hello",
  "States": {
    "Hello": {
      "Type": "Task",
      "Resource": "module:hello",
      "Next": "WaitForThreeSeconds"
    },
    "WaitForThreeSeconds": {
      "Type": "Wait",
      "Seconds": 3,
      "Next": "Hello2"
    },
    "Hello2": {
      "Type": "Task",
      "Resource": "module:hello",
      "End": true
    }
  }
}