{
  "Comment": "A simple state machine to loop using the wait state",
  "StartAt": "Hello",
  "States": {
    "Hello": {
      "Type": "Task",
      "Resource": "module:now",
      "Next": "Pause"
    },
    "Pause": {
      "Type": "Wait",
      "SecondsPath": "$.waitFor",
      "Next": "Hello2"
    },
    "Hello2": {
      "Type": "Task",
      "Resource": "module:now",
      "End": true
    }
  }
}